
@model İsTakipSistemiMVC.Models.Birimler



@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_LayoutSistemYoneticisi.cshtml";
}

<div class="container mt-5">
    <h3>Birim Güncelleme İşlemi</h3>
    <hr />
    @using (Html.BeginForm("Guncelle", "SistemYoneticisi", FormMethod.Post))
    {
        @Html.HiddenFor(model=>model.birimId)
        <div class="row mb-3">
            <!-- Labelfor üzerinde yazması gereken yazıyı belirtecek 
                htmlAttiributes okunabilirliği için daha düzgün bir kullanım gerçekleştiriyoruz.
                -->
            @Html.LabelFor(model=>model.birimAd, htmlAttributes: new {@class="col-sm-3 coll-form-label"})
            <div class="col-sm-6">
                <!-- input için de editorfor kullanıyoruz.
                    burada value ayarlamadık model.birimAd diyerek editorFor'a hem nameyi hemde value birimAd'ın içeriği yaptık-->
                @Html.EditorFor(model => model.birimAd, new {htmlAttributes=new {@class="form-control"}})
            </div>
        </div>
        <div class="text-center d-grid gap-5 col-6 mx-auto">
            <button class="btn btn-success" type="submit">GÜNCELLE</button>
        </div>
    }
</div>