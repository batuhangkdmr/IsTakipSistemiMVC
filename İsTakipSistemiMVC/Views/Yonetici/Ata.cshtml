
@{
    ViewBag.Title = "Ata";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="conteiner mt-5">
    <div class="card">
        <div class="card-header">
            @ViewBag.birimAd birimi için İş Atama İşlemi
        </div>  
        <div class="card-body">
            @using (Html.BeginForm("Ata", "Yonetici", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="isBaslik" class="form-label">İş Başlığını giriniz</label>
                    <input type="text" class="form-control" id="isBaslik" name="isBaslik">
                </div>
                <div class="mb-3">
                    <label for="isAciklama" class="form-label">İş Açıklaması Giriniz</label>
                    <input type="text" class="form-control" id="isAciklama" name="isAciklama">
                </div>
                <div class="mb-3">
                    <label for="selecPer" class="form-label">Çalışan seçiniz</label>
                    <select class="from-select" name="selectPer" id="selectPer">
                        @foreach (var personel in ViewBag.personeller)
                        {
                            <option value="@personel.PersonelId">@personel.PersonelAdSoyad</option>
                        }

                    </select>
                </div>
                <div class="mb-3">
                    <button class="btn btn-outline-primary" type="submit">İş Ata</button>

                </div>


            }
        </div>
    </div>

</div>
