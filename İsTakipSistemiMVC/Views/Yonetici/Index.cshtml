
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";

    @model IEnumerable<İsTakipSistemiMVC.Models.ToplamIs>
}

<h2>@ViewBag.birimAd birimi için yetkisilisiniz</h2>

<div class="container mt-5">
    <div class="row mb-3">
        <div class="col">
            @Html.ActionLink("Ayın Elemanı", "AyinElemani", "Yonetici", new { }, new {@class="btn btn-info w-50 mx-5"})
        </div>
    </div>
    <!-- w-50 genişlik  mx-5 de öteledik x ekseninde-->
    <ul class="list-group w-50 mx-5">
        <li class="list-group-item d-flex justify-content-between aling-items-center list-group-item-primary">
            @ViewBag.birimAd birimi için çalışanların toplam işleri:
        </li>
        @foreach (var item in Model)
        {
            <li class="list-group-item d-flex justify-content-between aling-items-center">
                @item.PersonelAdSoyad
                <!-- badge tipinde olsun arka plani bg-primary ve köşelerini ovalleştirmek için rounded-pill yazıyoruz.-->
                <span class=" badge bg-primary rounded-pill">Yapılan İş Toplamı : @item.toplamIs</span>

            </li>
        }
    </ul>
</div>
